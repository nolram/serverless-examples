{
    "compilerOptions": {
      "lib": ["es2017"],
      "removeComments": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2017",
      "experimentalDecorators": true,
      "outDir": "lib"
    },
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }